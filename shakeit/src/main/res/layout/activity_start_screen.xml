<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.shakeit.StartScreen"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/tvShakeIT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/shake_the_world"
        android:textColor="@color/black_color"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_above="@+id/btnPlay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="86dp"
        android:fontFamily="sans-serif-condensed" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/pic"
        android:gravity="center"
        android:text="@string/play"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed" />

    <Button
        android:id="@+id/btnStatistic"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/pic"
        android:text="@string/statistic"
        android:textSize="25sp"
        android:layout_marginTop="45dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/btnPlay"
        android:layout_alignLeft="@+id/btnPlay"
        android:layout_alignStart="@+id/btnPlay" />

        <Button
            android:id="@+id/button_settings"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/cloud"
            android:layout_below="@+id/btnStatistic"
            android:layout_alignLeft="@+id/btnStatistic"
            android:layout_alignStart="@+id/btnStatistic"
            android:layout_marginTop="31dp"
            android:text="@string/settings"
            android:textSize="25dp"
            android:fontFamily="sans-serif-condensed"/>
</RelativeLayout>