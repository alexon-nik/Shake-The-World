<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.emotive.smolguparser.shaketheworld.shakeit.SettingsActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/tv_title_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black_color"
        />

    <TextView
        android:id="@+id/tv_description_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_in_settings"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_title_settings"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"/>

    <Button

        android:onClick="btn_start_set_Click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_description_settings"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cloud"
        android:text="@string/start"/>




</RelativeLayout>
