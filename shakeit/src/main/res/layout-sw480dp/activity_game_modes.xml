<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.shakeit.SingleActivity"
    tools:ignore="MergeRootFrame">

    <TextView
        android:id="@+id/choosing_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:text="@string/choosing_game_mode"
        android:textColor="@color/black_color"
        android:textSize="50sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold" />

    <Button
        android:id="@+id/mode3"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/choosing_mode"
        android:background="@drawable/pic"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="@string/endurance"
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed" />

    <Button
        android:id="@+id/mode2"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@+id/mode3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pic"
        android:layout_margin="40dp"
        android:gravity="center"
        android:text="@string/time"
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed" />

    <Button
        android:id="@+id/mode1"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mode2"
        android:background="@drawable/pic"
        android:gravity="center"
        android:text="@string/speed"
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed" />

</RelativeLayout>

