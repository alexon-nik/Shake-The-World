<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.emotive.smolguparser.shaketheworld.shakeit" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.emotive.smolguparser.shaketheworld.shakeit.SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.emotive.smolguparser.shaketheworld.shakeit.StartScreen"
            android:label="@string/title_activity_start_screen"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.emotive.smolguparser.shaketheworld.shakeit.StatisticActivity"
            android:label="@string/title_activity_statistic"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.emotive.smolguparser.shaketheworld.shakeit.ChooseMode"
            android:label="@string/title_activity_choose_mode"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.emotive.smolguparser.shaketheworld.shakeit.GameModes"
            android:label="@string/title_activity_game_modes"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.emotive.smolguparser.shaketheworld.shakeit.MultiPlayer"
            android:label="@string/title_activity_multi_player"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">
        </activity>
    </application>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <uses-sdk
        android:maxSdkVersion="19"
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />


</manifest>
